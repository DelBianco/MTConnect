{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Machine</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Uuid</th>
                <td>{{ entity.uUID }}</td>
            </tr>
            <tr>
                <th>Probe</th>
                <td>{{ entity.probe }}</td>
            </tr>
            <tr>
                <th>Ip</th>
                <td>{{ entity.iP }}</td>
            </tr>
            <tr>
                <th>Port</th>
                <td>{{ entity.port }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('machine') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('machine_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
